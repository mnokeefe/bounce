extends layout

block content

  form.form-group.username-form(action='')
    label Username
    input.form-control(type='text')
    input.btn.btn-primary(type='submit', value='Join')

  section#ui.ui
    section.weather.js-client(data-stress='ok')
      #weather.slick

    p#username
    p.location

block scripts
  script(src='//cdnjs.cloudflare.com/ajax/libs/moment.js/2.0.0/moment.min.js')
  script(src='//cdn.jsdelivr.net/jquery.slick/1.3.6/slick.min.js')
  script(src='js/weather.js')
  script(src='js/client.js')